<h1>產品列表</h1>

  <%= link_to "新增產品", new_product_path %>

  <table>
    <thead>
      <tr>
        <td>產品名稱</td>
        <td>產品描述</td>
        <td>產品價格</td>
        <td>處理動作</td>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to "編輯", edit_product_path(product) %>
          <%= link_to "刪除", product_path(product), method: "delete", data: { confirm: "確認刪除" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>